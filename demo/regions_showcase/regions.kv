#:kivy 1.0
<StartScreen>:
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: 'Load csv'
            on_press:
                root.manager.current = 'user_select'
        Button:
            text: 'Use Mocked API'
        Button:
            text: 'Use real API'


<UserSelectScreen>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            TextInput:
                size_hint: .2, None
                height: 30
                multiline: False
    
            Button:
                text: 'Go'
                size_hint: .2, None
                height: 30
        Label:
            text: 'list of users'
            size_hint: 1, None
            height: 30
        Label:
            text: 'user1\nuser2\nuser3'
            valign: "top"
